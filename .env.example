# ============================================
# CLANKER MINIAPP - Environment Configuration
# ============================================
# Copy this file to .env.local and fill in your values

# ============================================
# TELEGRAM CONFIGURATION
# ============================================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your bot username (without @)
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME=your_bot_username

# Webhook URL for bot notifications (your deployed URL)
TELEGRAM_WEBHOOK_URL=https://your-domain.vercel.app/api/telegram

# ============================================
# WALLET CONFIGURATION - PRIVY (Recommended)
# ============================================
# Get from https://dashboard.privy.io
# Privy provides embedded wallets - best UX for Telegram MiniApp
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret

# ============================================
# WALLET CONFIGURATION - WALLETCONNECT (Optional)
# ============================================
# Get from https://cloud.walletconnect.com
# For users who prefer external wallets (MetaMask, Rainbow, etc.)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================
# Base Mainnet
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_RPC_URL=https://mainnet.base.org

# Alternative RPC providers (faster/more reliable)
# NEXT_PUBLIC_RPC_URL=https://base.llamarpc.com
# NEXT_PUBLIC_RPC_URL=https://base.drpc.org

# ============================================
# CLANKER SDK - DEFAULT TOKEN SETTINGS
# ============================================
# These are defaults that can be overridden in the UI

# Default Token Admin (receives ownership)
# Leave empty to use connected wallet address
NEXT_PUBLIC_DEFAULT_TOKEN_ADMIN=

# Default Reward Recipient (receives trading fees)
# Leave empty to use connected wallet address
NEXT_PUBLIC_DEFAULT_REWARD_RECIPIENT=

# Default Token Image (IPFS URI)
NEXT_PUBLIC_DEFAULT_IMAGE=ipfs://bafybeigdyrzt5sfp7udm7hu76uh7y26nf3efuylqabf3oclgtqy55fbzdi

# ============================================
# CLANKER SDK - MEV PROTECTION
# ============================================
# MEV Module Type: None | BlockDelay | SniperAuctionV2
# Recommended: BlockDelay for protection against snipers
NEXT_PUBLIC_MEV_MODULE_TYPE=BlockDelay

# Block Delay (only for BlockDelay type)
# Number of blocks to delay before allowing trades
# Recommended: 8 blocks (~16 seconds on Base)
NEXT_PUBLIC_BLOCK_DELAY=8

# ============================================
# CLANKER SDK - FEE CONFIGURATION
# ============================================
# Fee Type: dynamic | static
# Dynamic: 1-5% based on price movement (recommended)
# Static: Fixed percentage
NEXT_PUBLIC_FEE_TYPE=dynamic

# Dynamic Fee Settings (only for dynamic type)
NEXT_PUBLIC_STARTING_SNIPER_FEE=100
NEXT_PUBLIC_ENDING_SNIPER_FEE=500
NEXT_PUBLIC_BASE_FEE=100
NEXT_PUBLIC_MAX_FEE=500

# Static Fee Settings (only for static type)
NEXT_PUBLIC_STATIC_CLANKER_FEE=500
NEXT_PUBLIC_STATIC_PAIRED_FEE=500

# ============================================
# CLANKER SDK - POOL CONFIGURATION
# ============================================
# Pool Position Type: standard | project
# Standard: Single position (recommended for meme tokens)
# Project: Multiple positions with distribution
NEXT_PUBLIC_POOL_POSITION_TYPE=standard

# Paired Token: WETH (default)
NEXT_PUBLIC_PAIRED_TOKEN=WETH

# ============================================
# MULTI-DEPLOY CONFIGURATION
# ============================================
# Maximum tokens per batch (1-100)
NEXT_PUBLIC_MAX_TOKENS_PER_BATCH=100

# Delay between deployments in seconds
NEXT_PUBLIC_DEPLOY_DELAY_SECONDS=10

# Auto-save deployment results
NEXT_PUBLIC_AUTO_SAVE_RESULTS=true

# ============================================
# CONTEXT - CLANKER.WORLD VERIFICATION
# ============================================
# These fields are required for token verification on clanker.world
NEXT_PUBLIC_CONTEXT_INTERFACE=Clanker MiniApp
NEXT_PUBLIC_CONTEXT_PLATFORM=telegram-miniapp

# ============================================
# OPTIONAL - ANALYTICS & MONITORING
# ============================================
# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry Error Tracking
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# ============================================
# OPTIONAL - STORAGE (for deployment history)
# ============================================
# Vercel KV (for session/cache)
KV_URL=
KV_REST_API_URL=
KV_REST_API_TOKEN=
KV_REST_API_READ_ONLY_TOKEN=

# Supabase (for user data/history)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ============================================
# SECURITY - ENCRYPTION
# ============================================
# Key for encrypting private keys in database
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-secure-encryption-key-here

# ============================================
# ACCESS CONTROL - PRIVATE ACCESS
# ============================================
# Admin secret for managing access codes
# Generate with: openssl rand -base64 24
ADMIN_SECRET=your-admin-secret-here

# Admin Telegram User IDs (comma-separated)
# These users get automatic full access without needing access codes
# Get your Telegram ID from @userinfobot on Telegram
ADMIN_TELEGRAM_IDS=123456789

# Access codes for authorized users
# Format: CODE1:Label1:MaxUsage:ExpiryDays,CODE2:Label2:MaxUsage:ExpiryDays
# MaxUsage: number or empty for unlimited
# ExpiryDays: number or empty for never expires
# Example: UMKM2024:Admin Access::,BETA123:Beta Tester:10:30
ACCESS_CODES=UMKM2024:Admin Access::

# ============================================
# DEVELOPMENT
# ============================================
# Enable debug mode
NEXT_PUBLIC_DEBUG=false

# Skip wallet connection in development
NEXT_PUBLIC_MOCK_WALLET=false

# Skip access control in development (set to true to bypass)
NEXT_PUBLIC_SKIP_ACCESS_CHECK=false
